    "drizzle:generate": "drizzle-kit generate:pg --config ./drizzle.config.ts",
    "drizzle:push": "node -r esbuild-register ./scripts/drizzle-migration.ts",
    "drizzle:migrate": "npm run drizzle:generate && npm run drizzle:push"
